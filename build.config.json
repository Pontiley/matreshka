{
  "structure": {
    "main": {
      "dir": "main",
      "src": {
        "dir": "src"
      },
      "builds": {
        "dir": "builds",
        "temp": "tmp",
        "dev": {
          "dir": "development",
          "html": "",
          "img": "img",
          "fonts": "fonts",
          "css": "css",
          "js": "js",
          "resources": ""
        },
        "prod": {
          "dir": "production",
          "html": "",
          "img": "img",
          "fonts": "fonts",
          "css": "css",
          "js": "js",
          "resources": ""
        }
      }
    }
  },
  "entries": {
    "html": [
      {
        "dir": "./"
      }
    ],
    "img": [
      {
        "dir": "img",
        "files": [
          "*"
        ]
      }
    ],
    "css": {
      "out": "styles.css",
      "commonStyles": {
        "dir": "./",
        "fileName": "styles.css"
      }
    },
    "libs": {
      "polifyls": {
        "dir": "./provided/scripts",
        "files": [
          "polyfills.ts", "polyfills.test.ts"
        ]
      },
      "scripts": {
        "dir": "./provided/scripts",
        "files": [
          "vendors.ts"
        ]
      },
      "styles": {
        "dir": "./provided/css",
        "files": [
          "*.css"
        ]
      }
    },
    "scripts": {
      "modules": true,
      "ts": [
        {
          "dir": "./",
          "files": [
            "main.ts", "main.test.ts"
          ]
        }
      ],
      "spec": [
        {
          "dir": "./app",
          "files": [
            "**/*.spec.ts"
          ]
        }
      ]
    },
    "resources": [
      {
        "dir": "./",
        "files": [
          "*"
        ],
        "extensions": "ico"
      }
    ]
  },
  "typeScript": {
    "configFile": "tsconfig.json"
  },
  "angular": {
    "inlineTemplate": true,
    "inlineStyles": true,
    "lazyRoute": true,
    "redirectToIndex": true
  }
}